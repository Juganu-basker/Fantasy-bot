// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id        Int      @id
  name      String
  team      String
  position  String
  stats     Stats[]
  injuries  Injury[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Stats {
  id        Int      @id @default(autoincrement())
  playerId  Int
  player    Player   @relation(fields: [playerId], references: [id])
  date      DateTime
  minutes   Int
  points    Int
  rebounds  Int
  assists   Int
  steals    Int
  blocks    Int
  turnovers Int
  fgm       Int
  fga       Int
  ftm       Int
  fta       Int
  tpm       Int
  tpa       Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([playerId, date])
}

model Injury {
  id          Int      @id @default(autoincrement())
  playerId    Int
  player      Player   @relation(fields: [playerId], references: [id])
  status      String   // OUT, DTD (Day-to-Day), etc.
  description String?
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([playerId, date])
}

model FreeAgent {
  id          Int      @id
  name        String
  team        String
  position    String
  trendScore  Float    // Calculated score based on recent performance
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
